    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["current","-auth=${input:authprovider}"],
            "env": {"DISPLAY":":0.1"}
        },
        {
            "name": "Launch Rod Debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["current","-rod=show,slow=1s,trace","-auth=${input:authprovider}"]
        }
    ],
    "inputs": [
        {
            "id": "authprovider",
            "description": "Select auth provider to use?",
            "options": ["guru","google"],
            "default": "guru",
            "type": "pickString"
        }
    ]
}